<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Flyouts_MAUI"
             xmlns:pages="clr-namespace:Flyouts_MAUI.Pages"
             x:Class="Flyouts_MAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.MainPage>
        <Shell 
            FlyoutBehavior="Flyout"
            FlyoutHeaderBehavior="Fixed"
            FlyoutVerticalScrollMode="Auto">

            <!--Flyout Header-->
            <Shell.FlyoutHeader>
                <Grid 
                    BackgroundColor="{StaticResource MyColor}"
                    HeightRequest="120"
                    Padding="0,10">
                    <Image Source="background.jpg" Aspect="AspectFill"/>
                    <Label 
                        Text="First MAUI" 
                        TextColor="White" 
                        FontSize="42" 
                        FontAttributes="Bold" 
                        HorizontalOptions="Center" 
                        VerticalOptions="End" />
                </Grid>
            </Shell.FlyoutHeader>
            
            <!--Footer-->
            <Shell.FlyoutFooter>
                <Grid
                    BackgroundColor="{StaticResource MyColor}"
                    HeightRequest="{OnPlatform iOS=52, Default=32}"
                    Padding="{OnPlatform iOS='0, 5, 0, 25', Default='0, 5, 0, 5'}">
                    <Label
                        Text="Copyright 2025"
                        FontSize="Small"
                        HorizontalOptions="Center" />
                </Grid>
            </Shell.FlyoutFooter>

            <Shell.FlyoutBackdrop>
                <LinearGradientBrush
                    StartPoint="0,0"
                    EndPoint="0,1">
                    <GradientStop Color="#8A2387" Offset="0.1" />
                    <GradientStop Color="#E94057" Offset="0.6" />
                    <GradientStop Color="#58ADF4" Offset="1.1" />
                </LinearGradientBrush>
            </Shell.FlyoutBackdrop>
            
            <Shell.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="0.25*,0.75*" Padding="0,10">
                        <Image 
                            Source="{Binding FlyoutIcon}"
                            HeightRequest="20"
                            HorizontalOptions="Center" />
                        <Label
                            Grid.Column="1"
                            Text="{Binding Title}"
                            FontSize="Small"
                            FontAttributes="Bold"
                            VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </Shell.ItemTemplate>
            
            <FlyoutItem Title="Home" Icon="home.png">
                <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
            </FlyoutItem>
            <FlyoutItem Title="Settings" Icon="settings.png">
                <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
            </FlyoutItem>
            <FlyoutItem Title="About" Icon="about.png">
                <ShellContent ContentTemplate="{DataTemplate pages:AboutPage}" />
            </FlyoutItem>
        </Shell>
    </Application.MainPage>
    </Application>
